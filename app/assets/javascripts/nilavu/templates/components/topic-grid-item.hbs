<div class="col-xs-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 app_cover">
    <div class="app_inner">
        <div class="app">
            <div class="app_head">
                <!-- <span class="app_config" id="config_menu" {{action 'on'}}> <i class="c_icon-config"></i> </span> {{action-link}} -->
                <div class="config_menu">
                    {{topic-controls}}
                </div>
                <div class="row app_icon">
                    <h5 style="max-width:500px; margin: auto; padding: 15px">
                        {{topic-link topic}}
                    </h5>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <ul class="list-inline app_icon_bottom">
                            <li>
                                {{showBrandImage}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="app_footer_padding">
                <i class="circle-{{topic.state}}"></i>
                <span>{{status}}</span>
                <span >
                  {{#if shell}}
                    {{#link-to "shell" (query-params id=topic.id asms_id=topic.asms_id name=name) target="_blank" }}
                    <i class="c_icon-window pull-right" style="padding-top:20px"></i>
                    {{/link-to}}
                  {{else}}
                    {{#link-to "vnc" (query-params id=topic.id asms_id=topic.asms_id name=name type=modelType) target="_blank" }}
                    <i class="c_icon-window pull-right" style="padding-top:20px"></i>
                    {{/link-to}}
                 {{/if}}
                </span>
                {{action-link}}

                <!-- <i class="c_icon-star pull-right" style="padding-right:30px"></i> -->
            </div>
        </div>
    </div>
</div>
