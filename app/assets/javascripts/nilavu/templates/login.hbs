<div class="signin login">
    <div class="container">
        {{login-logo minimized=showExtraInfo}}

        <!-- BEGIN LOGIN -->
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-8 col-xl-8 offset-sm-1 offset-md-1 offset-lg-2 offset-xl-2 bg_white border_grey">
            <div class="container">
                <div class="row bottom-divider">
                    <div class="offset-lg-1 offset-md-1 col-lg-10 col-md-10">
                        <h2>{{i18n 'login.title'}}</h2>
                    </div>
                </div>
            </div>
            <br/>

            <div class="offset-lg-1 offset-md-1 col-lg-10 col-md-10">
                <form>
                    <div class="c_inline">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-112">
                                    <i class="tickdot"></i> {{text-field value=loginName placeholderKey="login.email_placeholder" class ="form-control" id="login-account-name" autocorrect="off" autocapitalize="off" autofocus="autofocus"}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-112">
                                    <i class="tickdot"></i> {{password-field value=loginPassword type="password" placeholderKey="login.password_placeholder" class ="form-control" id="login-account-password" maxlength="200" capsLockOn=capsLockOn}}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer">
                                <div class="row pad_t12">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 tour-btn">
                                        <span>
                                                <a href="#create_account" id="new-account-link" {{action "createAccount"}}>
                                                    <u class="colr-bluegrey"></u>
                                                    {{i18n 'login.create_account'}}
                                                </a>
                                            </span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pull-right tour-btn">
                                        <span>
                                                <a href="#" id="forgot-password-link" {{action "showForgotPassword"}} class="pull-right">
                                                    <u class="colr-denimblue"></u>{{i18n 'forgot_password.action'}}
                                                </a>
                                            </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right tour-btn">
                                        <button class="btn btn-success btn-plain-green" {{bind-attr disabled="loginDisabled"}} {{action "login"}}>
                                             {{loginButtonText}}
                                             <span class="pull-right" style="position: absolute;">
                                                 {{conditional-loading-spinner condition=showSpinner size="large"}}
                                             </span>
                                         </button>

                                    </div>
                                    {{#if takeTourEnable}}
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 tour-btn">
                                        <a href="{{takeTourUrl}}" target="_blank">
                                            <button type="button" class="btn btn-success btn-plain">

                                                    {{i18n 'login.take_a_tour'}}
                                       </button>
                                        </a>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{login-buttons action="externalLogin"}}
                    </div>
                </form>
            </div>
        </div>
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-8 col-xl-8 offset-sm-1 offset-md-1 offset-lg-2 offset-xl-2 footer-bottom">
            <div class="row">
                <!-- only for simha color:white-->
                <p class="text-center copy-right">
                      <!-- {{i18n 'login.copyright'}} -->
                    <a href="{{contactUrl}}" target="_blank">{{orgName}}</a>
                    {{orgDescription}}
                    <span class="pull-right"></span>
                </p>
            </div>
        </div>
    </div>
</div>
