<div class="rt-box col-xs-12 c_height_5">
  {{topic-list-header currentUser=currentUser title=title }}
  <div class="ssh-well">
        <div class="row">
            <div class="col-md-6 verticalLine">
             <h1>{{i18n 'ssh_keys.create_info'}}</h1>
                <p>{{i18n 'ssh_keys.create_info_sub'}}</p>
                <button class="btn blue" {{action "sshCreate"}}>
                    {{i18n 'ssh_keys.create'}}
                </button>
            </div>
            <div class="col-md-6">
             <h1> {{i18n 'ssh_keys.upload_key'}}</h1>
                <p> {{i18n 'ssh_keys.upload_key_info'}}</p>
                <button class="btn btn-success" {{action "sshImport"}}>
                    {{i18n 'ssh_keys.import'}}
                </button>
            </div>
        </div>
    </div>

    <div class="ssh-well-without-background">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <table class="table tb_list">
                    <thead>
                            <th class="pad_l29">{{i18n 'ssh_keys.action'}}</th>
                            <th>{{i18n 'ssh_keys.name'}}</th>
                            <th>{{i18n 'ssh_keys.created_at'}}</th>
                    </thead>
                    <tbody>
                        {{#each sortedSshKeys as |h|}}
                            {{sshkey-download h=h}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
