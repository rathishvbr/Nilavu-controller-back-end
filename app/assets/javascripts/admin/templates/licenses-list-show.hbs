<div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
            {{radio-button name="selected_option" selection=selectedOption value="key"}}
            Enter license key
     </div>
    {{#if selectedOption}}
    <label class="control-label col-sm-2">License key</label>
        <div class="col-sm-10">
            {{textarea value=licenseKey cols="80" rows="10"}}<br><br>
              <button {{action "submit"}} {{bind-attr disabled="submitDisabled"}} class='btn btn-primary'>Upload license</button>
        </div>
    {{/if}}
</div>
